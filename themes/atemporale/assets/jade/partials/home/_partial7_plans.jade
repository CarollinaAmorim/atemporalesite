                    .col-md-4
                        .pricing-table.featured(data-animation-name="flipInY")
                            +content('home_planos/plain2.htm')
                            a.btn.btn-sm.btn-primary.btn-block(href="#")
                                !='Quero saber mais'
                    .col-md-4
                        .pricing-table(data-animation-name="flipInY")
                            +content('home_planos/plain3.htm')
                            a.btn.btn-sm.btn-primary.btn-block(href="#")
